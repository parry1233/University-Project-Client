                                    <ComboBoxItem>
                                        作業
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        考試
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        思考
                                    </ComboBoxItem>
                                </ComboBox>
                                <TextBox Style="{StaticResource Textbox1}"/>
                            </StackPanel>
                            <StackPanel x:Name="Tomorr_Target_4" Orientation="Horizontal" Margin="5 30 0 0">
                                <TextBlock Cursor="Hand" VerticalAlignment="Center" Margin="0 15 0 0">
                                    <materialDesign:PackIcon Kind="Pencil" Foreground="#e1eef6" Height="20" Width="20"/>
                                </TextBlock>
                                <ComboBox materialDesign:HintAssist.Hint="TAG" IsEditable="True" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Width="65" Margin="10,4,10,0" Foreground="#F8F8FF">
                                    <ComboBoxItem>
                                        學習
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        作業
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        考試
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        思考
                                    </ComboBoxItem>
                                </ComboBox>
                                <TextBox Style="{StaticResource Textbox1}"/>
                            </StackPanel>
                            <StackPanel x:Name="Tomorr_Target_5" Orientation="Horizontal" Margin="5 30 0 0">
                                <TextBlock Cursor="Hand" VerticalAlignment="Center" Margin="0 15 0 0">
                                    <materialDesign:PackIcon Kind="Pencil" Foreground="#e1eef6" Height="20" Width="20"/>
                                </TextBlock>
                                <ComboBox materialDesign:HintAssist.Hint="TAG" IsEditable="True" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Width="65" Margin="10,4,10,0" Foreground="#F8F8FF">
                                    <ComboBoxItem>
                                        學習
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        作業
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        考試
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        思考
                                    </ComboBoxItem>
                                </ComboBox>
                                <TextBox Style="{StaticResource Textbox1}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <TextBlock x:Name="Long_Target_Title" Text="LONG TARGET" FontSize="35" Width="340" Height="45" Margin="0 0 0 465" TextAlignment="Center"/>
            <Button Content="+" Style="{StaticResource Button3}" VerticalAlignment="Top" Margin="0 15" Cursor="Hand" Click="Button_Click"/>
            <Viewbox x:Name="Complete_Percent" Width="200" Height="420" Margin="0 75 0 0">
                <StackPanel Orientation="Vertical">
                    <Border Background="#7f9eb2" CornerRadius="2,2,0,0" Padding="2" Width="20" Height="7" Margin="0,-2,0,-2"/>
                    <Border BorderBrush="#7f9eb2" BorderThickness="2" CornerRadius="5" Padding="2" Width="50" Height="100">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Border Height="92" Grid.Row="1" Background="#d9e1e8" CornerRadius="2"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Viewbox>
            <Grid x:Name="AddTargetTitle" Margin="50 90 50 360" Background="Gray" Opacity="0.8">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="輸入計畫名稱" Foreground="White" FontSize="25" Margin="0 15 0 15" HorizontalAlignment="Center"/>
                    <TextBox x:Name="AddTargetTitleBox" Height="35" Foreground="AliceBlue" FontSize="16" Width="250" BorderThickness="0 0 0 1" BorderBrush="AliceBlue"
                     TextWrapping="Wrap" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
