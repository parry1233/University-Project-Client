                                </ComboBox>
                                <TextBox Style="{StaticResource Textbox1}"/>
                            </StackPanel>
                            <StackPanel x:Name="Today_Target_3" Orientation="Horizontal" Margin="5 30 0 0">
                                <RadioButton Margin="0 20 0 0" Background="#d9e1e8"/>
                                <ComboBox materialDesign:HintAssist.Hint="TAG" IsEditable="True" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Width="65" Margin="10,4,10,0" Foreground="#F8F8FF">
                                    <ComboBoxItem>
                                        學習
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        作業
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        考試
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        思考
                                    </ComboBoxItem>
                                </ComboBox>
                                <TextBox Style="{StaticResource Textbox1}"/>
                            </StackPanel>
                            <StackPanel x:Name="Today_Target_4" Orientation="Horizontal" Margin="5 30 0 0">
                                <RadioButton Margin="0 20 0 0" Background="#d9e1e8"/>
                                <ComboBox materialDesign:HintAssist.Hint="TAG" IsEditable="True" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Width="65" Margin="10,4,10,0" Foreground="#F8F8FF">
                                    <ComboBoxItem>
