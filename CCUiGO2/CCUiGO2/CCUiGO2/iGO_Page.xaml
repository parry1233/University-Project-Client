                                    </ComboBoxItem>
                                </ComboBox>
                                <TextBox Style="{StaticResource Textbox1}"/>
                            </StackPanel>
                            <StackPanel x:Name="Tomorr_Target_2" Orientation="Horizontal" Margin="5 30 0 0">
