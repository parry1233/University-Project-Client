                                </TextBlock>
                                <ComboBox materialDesign:HintAssist.Hint="TAG" IsEditable="True" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Width="65" Margin="10,4,10,0" Foreground="#F8F8FF">
                                    <ComboBoxItem>
                                        學習
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        作業
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        考試
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        思考
                                    </ComboBoxItem>
                                </ComboBox>
                                <TextBox Style="{StaticResource Textbox1}"/>
                            </StackPanel>
                            <StackPanel x:Name="Tomorr_Target_3" Orientation="Horizontal" Margin="5 30 0 0">
                                <TextBlock Cursor="Hand" VerticalAlignment="Center" Margin="0 15 0 0">
                                    <materialDesign:PackIcon Kind="Pencil" Foreground="#e1eef6" Height="20" Width="20"/>
                                </TextBlock>
                                <ComboBox materialDesign:HintAssist.Hint="TAG" IsEditable="True" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Width="65" Margin="10,4,10,0" Foreground="#F8F8FF">
                                    <ComboBoxItem>
