                                    <ComboBoxItem>
                                        考試
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        思考
                                    </ComboBoxItem>
                                </ComboBox>
                                <TextBox Style="{StaticResource Textbox1}"/>
                            </StackPanel>
                            <StackPanel x:Name="Today_Target_5" Orientation="Horizontal" Margin="5 30 0 0">
                                <RadioButton Margin="0 20 0 0" Background="#d9e1e8"/>
                                <ComboBox materialDesign:HintAssist.Hint="TAG" IsEditable="True" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Width="65" Margin="10,4,10,0" Foreground="#F8F8FF">
                                    <ComboBoxItem>
                                        學習
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        作業
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        考試
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        思考
                                    </ComboBoxItem>
                                </ComboBox>
                                <TextBox Style="{StaticResource Textbox1}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0 0">
                    <TextBlock Text="TOMORROW" FontSize="40" Margin="0 30 0 10"/>
                    <Border Background="#9baec8" Width="300" Height="450" CornerRadius="20">
                        <StackPanel x:Name="Tomorr_Target_1" Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="5 50 0 0">
                                <TextBlock Cursor="Hand" VerticalAlignment="Center" Margin="0 15 0 0">
                                    <materialDesign:PackIcon Kind="Pencil" Foreground="#e1eef6" Height="20" Width="20"/>
                                </TextBlock>
                                <ComboBox materialDesign:HintAssist.Hint="TAG" IsEditable="True" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Width="65" Margin="10,4,10,0" Foreground="#F8F8FF">
                                    <ComboBoxItem>
                                        學習
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        作業
                                    </ComboBoxItem>
                                    <ComboBoxItem>
